var config = require("hexo/dist/theme/processors/config").config;
<%- extends 'layout.ejs' %>

<% block content %>
<div class="about-page">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <article class="card card--page-content mb-5">
          <div class="card__body">
            <header class="page-header text-center mb-5">
              <h1 class="page-title gradient-text"
                  data-text-zh="关于我"
                  data-text-en="About Me">
                关于我
              </h1>
            </header>

            <div class="page-body">
              <div class="row mb-5">
                <div class="col-md-4 text-center mb-4 mb-md-0">
                  <div class="avatar-placeholder rounded-circle mx-auto mb-3"
                       style="width: 150px; height: 150px; background: linear-gradient(135deg, hsl(var(--color-accent-start)), hsl(var(--color-accent-end)));">
                  </div>
                  <h2 class="h4 mb-2"><%= config.author || '作者名称' %></h2>
                  <p class="text-muted"><%= config.title || '全栈开发者' %></p>

                  <div class="social-links d-flex justify-content-center flex-wrap mt-3">
                    <% socialLinks.forEach(link => { %>
                      <a href="<%= link.url %>" class="btn btn--icon btn--glass me-2 mb-2" aria-label="<%= link.name %>">
                        <%- iconManager.renderIcon(link.icon, { size: 20 }) %>
                      </a>
                    <% }); %>
                  </div>
                </div>

                <div class="col-md-8">
                  <h2 class="h4 mb-3" data-i18n="about.intro">关于我</h2>
                  <p class="mb-4">
                    <%= config.description || '这里是一段关于作者的简短介绍。可以包括教育背景、工作经历、技术专长等信息。。'%>
                  </p>

                  <div class="row mb-4">
                    <div class="col-sm-6 mb-3 mb-sm-0">
                      <h3 class="h5 mb-2" data-i18n="about.location">现居地</h3>
                      <p class="text-muted">北京市</p>
                    </div>
                    <div class="col-sm-6">
                      <h3 class="h5 mb-2" data-i18n="about.experience">工作经历</h3>
                      <p class="text-muted">5年+</p>
                    </div>
                  </div>

                  <div class="mb-4">
                    <h3 class="h5 mb-2" data-i18n="about.interests">兴趣爱好</h3>
                    <p class="text-muted">编程、阅读、摄影、旅行</p>
                  </div>
                </div>
              </div>

              <div class="row mb-5">
                <div class="col-12">
                  <h2 class="h4 mb-4">技能栈</h2>
                  <div class="row">
                    <div class="col-md-4 mb-4">
                      <div class="card card--tech h-100">
                        <div class="card__body text-center">
                          <div class="tech-icon rounded-circle mx-auto mb-3" style="width: 60px; height: 60px;">
                            <%- iconManager.renderIcon('code', { size: 32, className: 'text-white' }) %>
                          </div>
                          <h3 class="card__title h6 mb-2">前端开发</h3>
                          <p class="card__text small text-muted">HTML/CSS/JavaScript, React, Vue</p>
                        </div>
                      </div>
                    </div>

                    <div class="col-md-4 mb-4">
                      <div class="card card--tech h-100">
                        <div class="card__body text-center">
                          <div class="tech-icon rounded-circle mx-auto mb-3" style="width: 60px; height: 60px;">
                            <%- iconManager.renderIcon('server', { size: 32, className: 'text-white' }) %>
                          </div>
                          <h3 class="card__title h6 mb-2">后端开发</h3>
                          <p class="card__text small text-muted">Node.js, Python, Java</p>
                        </div>
                      </div>
                    </div>

                    <div class="col-md-4 mb-4">
                      <div class="card card--tech h-100">
                        <div class="card__body text-center">
                          <div class="tech-icon rounded-circle mx-auto mb-3" style="width: 60px; height: 60px;">
                            <%- iconManager.renderIcon('database', { size: 32, className: 'text-white' }) %>
                          </div>
                          <h3 class="card__title h6 mb-2">数据库</h3>
                          <p class="card__text small text-muted">MySQL, MongoDB, Redis</p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <div class="text-center mt-5 pt-4 border-top">
                <h2 class="h4 mb-3" data-i18n="about.contact">联系方式</h2>
                <p class="text-muted mb-4">
                  如果您有任何问题或合作意向，欢迎随时联系我。
                </p>
                <a href="mailto:me@example.com" class="btn btn--lg" data-i18n="about.contact">联系我</a>
              </div>
            </div>
          </div>
        </article>
      </div>
    </div>
  </div>
</div>
<% endblock %>
