<aside class="author-sidebar" role="complementary" aria-label="作者信息">
  <div class="author-card card">
    <div class="card__body text-center">
      <!-- Author avatar -->
      <div class="author-avatar mb-3">
        <div class="avatar-placeholder rounded-circle mx-auto" 
             style="width: 100px; height: 100px; background: linear-gradient(135deg, hsl(var(--color-accent-start)), hsl(var(--color-accent-end)));">
        </div>
      </div>
      
      <!-- Author name and title -->
      <h3 class="author-name h5 mb-1"><%= config.author || '作者名称' %></h3>
      <p class="author-title text-muted small mb-3">全栈开发者</p>
      
      <!-- Author bio -->
      <p class="author-bio small text-muted mb-3">
        <%= config.description || '这里是一段关于作者的简短介绍。' %>
      </p>
      
      <!-- Social links -->
      <div class="author-social-links d-flex justify-content-center flex-wrap">
        <% 
          // Get social links - support both old and new format
          let socialLinks = [];
          if (theme.social.links && Array.isArray(theme.social.links)) {
            // New format
            socialLinks = theme.social.links;
          } else if (theme.social) {
            // Old format
            socialLinks = Object.keys(theme.social)
              .filter(key => theme.social[key])
              .map(key => ({
                name: key,
                url: theme.social[key],
                icon: key,
                i18n: `social.${key}`
              }));
          }
        %>
        
        <% socialLinks.forEach((link, index) => { %>
          <% const marginClass = index === socialLinks.length - 1 ? 'mb-1' : 'me-1 mb-1'; %>
          <a href="<%= link.url %>" class="btn btn--icon btn--sm btn--glass <%= marginClass %>" <% if (link.i18n) { %>aria-label="<%= link.name %>" data-i18n="<%= link.i18n %>"<% } else { %>aria-label="<%= link.name %>"<% } %>>
            <%- iconManager.renderIcon(link.icon, { size: 16 }) %>
          </a>
        <% }); %>
      </div>
    </div>
  </div>
</aside>