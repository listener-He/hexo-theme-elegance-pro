<%
  // Define default navigation items
  const defaultNavItems = [
    { title: '首页', path: '/', i18n: 'common.home' },
    { title: '归档', path: '/archives/', i18n: 'common.archives' },
    { title: '分类', path: '/categories/', i18n: 'common.categories' },
    { title: '标签', path: '/tags/', i18n: 'common.tags' },
    { title: '关于', path: '/about/', i18n: 'common.about' }
  ];

  // Get navigation items from theme config or use defaults
  const navItems = theme.navigation && theme.navigation.menu ? theme.navigation.menu : defaultNavItems;
%>

<header class="site-header" role="banner">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center py-3">
      <!-- Logo/Site Title -->
      <div class="site-branding">
        <h1 class="site-title h4 mb-0">
          <a href="<%= url_for() %>" class="text-decoration-none">
            <%= config.title %>
          </a>
        </h1>
        <% if (config.subtitle) { %>
          <p class="site-description small text-muted mb-0">
            <%= config.subtitle %>
          </p>
        <% } %>
      </div>
      
      <!-- Navigation -->
      <nav class="site-navigation" role="navigation" aria-label="主导航">
        <ul class="nav-list d-flex mb-0">
          <% navItems.forEach(item => { %>
            <li class="nav-item">
              <a href="<%= url_for(item.path) %>" 
                 class="nav-link <%= page.path === item.path ? 'active' : '' %>"
                 <% if (item.i18n) { %>data-i18n="<%= item.i18n %>"<% } %>>
                <%= item.title %>
              </a>
            </li>
          <% }); %>
        </ul>
      </nav>
      
      <!-- Mobile menu button -->
      <button class="mobile-menu-toggle btn btn--icon d-lg-none" aria-label="切换菜单">
        <span class="menu-icon">☰</span>
      </button>
    </div>
  </div>
</header>