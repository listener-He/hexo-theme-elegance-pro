<%- extends 'layout.ejs' %>

<% block content %>
<!-- Hero Section -->
<section class="hero-section py-5">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-8">
        <h1 class="gradient-text hero-title mb-4" 
            data-i18n="hero.title"
            data-text-zh="全栈创作者"
            data-text-en="Full-Stack Creator">
          全栈创作者
        </h1>
        <p class="hero-subtitle fs-5 mb-4" data-i18n="hero.subtitle">
          构建优雅数字体验
        </p>
        <div class="mb-5">
          <a href="#latest-posts" class="btn btn--gradient btn--lg me-3" data-i18n="hero.latestPosts">
            最新文章
          </a>
          <a href="/projects" class="btn btn--secondary btn--lg" data-i18n="hero.viewAll">
            查看全部
          </a>
        </div>
      </div>
      <div class="col-lg-4 text-center">
        <!-- Avatar or illustration -->
        <div class="hero-avatar bg-light rounded-circle mx-auto" style="width: 200px; height: 200px;"></div>
      </div>
    </div>
  </div>
</section>

<!-- Tech Stack Section -->
<section class="tech-stack-section py-5 bg-light">
  <div class="container">
    <h2 class="section-title mb-4 text-center" data-i18n="hero.techStack">
      技术栈
    </h2>
    <div class="row">
      <% for (let i = 0; i < 6; i++) { %>
        <div class="col-md-4 col-lg-2 mb-4">
          <div class="card card--tech h-100 text-center p-4">
            <div class="tech-icon bg-primary rounded-circle mx-auto mb-3" style="width: 60px; height: 60px;"></div>
            <h3 class="h5">技术 <%= i+1 %></h3>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</section>

<!-- Latest Posts Section -->
<section id="latest-posts" class="latest-posts-section py-5">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="section-title mb-0" data-i18n="hero.latestPosts">
        最新文章
      </h2>
      <a href="/archives" class="btn btn--outline" data-i18n="hero.viewAll">
        查看全部
      </a>
    </div>
    <div class="row">
      <% for (let i = 0; i < 3; i++) { %>
        <div class="col-md-6 col-lg-4 mb-4">
          <article class="card card--post h-100">
            <div class="card__img" style="height: 200px; background-color: #eee;"></div>
            <div class="card__body d-flex flex-column">
              <div class="mb-2">
                <span class="tag tag--sm me-2">分类</span>
                <span class="tag tag--sm tag--success">标签</span>
              </div>
              <h3 class="card__title h5">
                <a href="/post/<%= i+1 %>" class="stretched-link text-decoration-none">
                  文章标题 <%= i+1 %>
                </a>
              </h3>
              <p class="card__text flex-grow-1">
                这里是文章的简短摘要，展示文章的主要内容和亮点...
              </p>
              <div class="d-flex justify-content-between align-items-center mt-3">
                <small class="text-muted">2023年5月<%= 10+i %>日</small>
                <small class="text-muted">阅读 5 分钟</small>
              </div>
            </div>
          </article>
        </div>
      <% } %>
    </div>
  </div>
</section>

<!-- Projects Section -->
<section class="projects-section py-5 bg-light">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="section-title mb-0" data-i18n="projects.title">
        开源项目
      </h2>
      <a href="/projects" class="btn btn--outline" data-i18n="hero.viewAll">
        查看全部
      </a>
    </div>
    <div class="row">
      <% for (let i = 0; i < 3; i++) { %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card card--project h-100">
            <div class="card__body">
              <h3 class="card__title h5">项目 <%= i+1 %></h3>
              <p class="card__text">
                这是一个开源项目的简短描述，展示项目的主要功能和特点...
              </p>
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <span class="me-3">⭐ 100</span>
                  <span>🍴 20</span>
                </div>
                <a href="#" class="btn btn--sm btn--primary">查看详情</a>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</section>
<% endblock %>