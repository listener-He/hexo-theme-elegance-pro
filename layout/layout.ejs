  <!-- Custom Body Start Injections -->
  <% if (theme.injections && theme.injections.bodyStart) { %>
    <% theme.injections.bodyStart.forEach(injection => { %>
      <% if (injection.type === 'html') { %>
  <%= injection.content %>
      <% } %>
    <% }); %>
  <% } %>
  
  <!-- Header -->
  <%- partial('_partial/header') %>
  
  <div class="container-fluid">
    <div class="row">
      <!-- Author Sidebar -->
      <aside class="col-lg-3 d-none d-lg-block">
        <%- partial('_partial/author-sidebar') %>
