      <!-- Main content -->
      <main id="main-content" class="col-lg-9">
        <%- body %>
      </main>
    </div>
  </div>
  
  <!-- Footer -->
  <%- partial('_partial/footer') %>
  
  <!-- Custom Body End Injections -->
  <% if (theme.injections && theme.injections.bodyEnd) { %>
    <% theme.injections.bodyEnd.forEach(injection => { %>
      <% if (injection.type === 'html') { %>
  <%= injection.content %>
      <% } %>
    <% }); %>
  <% } %>
  
  <!-- Theme switcher -->
  <button class="theme-toggle btn btn--icon" aria-label="ÂàáÊç¢‰∏ªÈ¢ò">
