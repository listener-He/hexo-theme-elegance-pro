  </button>
  
  <!-- Language switcher -->
  <button class="lang-toggle btn btn--icon" data-action="toggle-lang" aria-label="ÂàáÊç¢ËØ≠Ë®Ä">
    <span class="lang-toggle-icon">üåê</span>
  </button>
  
  <!-- Back to top button -->
  <button class="back-to-top btn btn--icon" aria-label="ÂõûÂà∞È°∂ÈÉ®">
    <span class="back-to-top-icon">‚Üë</span>
  </button>
  
  <!-- Main JavaScript -->
  <script src="/js/main.js"></script>
  
  <!-- Custom Footer Injections -->
  <% if (theme.injections && theme.injections.footer) { %>
    <% theme.injections.footer.forEach(injection => { %>
      <% if (injection.type === 'script') { %>
        <% if (injection.src) { %>
  <script src="<%= injection.src %>"<%= injection.async ? ' async' : '' %><%= injection.defer ? ' defer' : '' %>></script>
        <% } else { %>
  <script<%= injection.async ? ' async' : '' %><%= injection.defer ? ' defer' : '' %>><%= injection.content %></script>
        <% } %>
      <% } else if (injection.type === 'style') { %>
        <% if (injection.href) { %>
  <link rel="stylesheet" href="<%= injection.href %>">
        <% } else { %>
  <style><%= injection.content %></style>
        <% } %>
      <% } else if (injection.type === 'html') { %>
  <%= injection.content %>
      <% } %>
    <% }); %>
  <% } %>
</body>
</html>