<!DOCTYPE html>
<html lang="<%= page.lang || 'zh-CN' %>" data-theme="<%= theme.theme || 'day' %>">
<%- partial('_partial/head.ejs') %>
<body class="site-body">
  <!-- Google Analytics -->
  <%- partial('_partial/analytics.ejs') %>
  
  <!-- Site Header -->
  <%- partial('_partial/header.ejs') %>
  
  <!-- Main Content -->
  <main class="site-main" role="main">
    <%- body %>
  </main>
  
  <!-- Author Sidebar (only show on post pages) -->
  <% if (page.layout === 'post' || page.layout === 'page') { %>
    <%- partial('_partial/author-sidebar.ejs') %>
  <% } %>
  
  <!-- Site Footer -->
  <%- partial('_partial/footer.ejs') %>
  
  <!-- Back to Top Button -->
  <% if (theme.components.back_to_top) { %>
    <%- partial('_widget/back-to-top.ejs') %>
  <% } %>
  
  <!-- Scripts -->
  <script src="/js/main.js"></script>
  
  <!-- Custom injections -->
  <%- partial('_partial/injections.ejs') %>
</body>
</html>